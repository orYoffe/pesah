{
  "database": {
    "rules": "rules.bolt"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/guard",
        "function": "guard"
      },
      {
        "source": "**",
        "function": "guard"
      }
    ]
  }
}
